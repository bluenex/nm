{
  "name": "@bluenex/nm",
  "version": "1.2.0",
  "description": "A fast and interactive CLI tool for managing node_modules directories",
  "main": "dist/cli.js",
  "bin": {
    "nm": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node_modules",
    "cli",
    "cleanup",
    "disk-space",
    "developer-tools"
  ],
  "author": "bluenex",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluenex/nm.git"
  },
  "homepage": "https://github.com/bluenex/nm#readme",
  "bugs": {
    "url": "https://github.com/bluenex/nm/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/ora": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "commander": "^14.0.0",
    "inquirer": "^12.9.1",
    "ora": "^8.2.0"
  }
}
